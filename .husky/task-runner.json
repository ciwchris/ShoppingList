{
    "tasks": [
        {
            "name": "tailwindcss",
            "command": "dotnet",
            "group": "pre-commit",
            "args": ["tailwindcss", "-i", "./Client/Styles/app.css", "-o", "./Client/wwwroot/css/app.css", "-c", "./Client/tailwind.config.js", "--minify"]
        },
        {
            "name": "format",
            "command": "dotnet",
            "group": "pre-commit",
            "args": ["format", "src", "--include", "${staged}"],
            "include": ["**/*.cs"]
        }
    ]
}
